    <connection>scm:svn:http://svn.apache.org/repos/asf/maven/skins/tags/maven-fluido-skin-1.3.0</connection>
    <developerConnection>scm:svn:https://svn.apache.org/repos/asf/maven/skins/tags/maven-fluido-skin-1.3.0</developerConnection>
